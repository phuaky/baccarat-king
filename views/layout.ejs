<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>baccarrat-express</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="/semantic/dist/semantic.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="/semantic/dist/semantic.min.js"></script>
  </head>
  <body>
    <!-- IF LOG IN, FIXED MENU, ELSE HIDDEN -->
    <div class="ui top sidebar inverted horizontal menu">
      <div class="ui three item menu">
        <a class="active item" href="/">HOME</a>
        <a class="item" href="game-table">PLAY</a>
        <% if(currentUser) { %>
          <a class="item" href="/users/logout">LOG OUT</a>
        <% } else { %>
          <a class="item" id="log-in">LOG IN</a>
        <% } %>
      </div>
  </div>

  <div class="pusher">
    <button class="ui black button" id="menu"><i class="white chevron down icon"></i></button>

    <% if(currentUser) { %>
      <div class="ui secondary  menu">
        <a class="active item">
          <%= currentUser.username %>
        </a>
        <a class="item">
          <strong>$<%= currentUser.credits %> </strong> &nbsp in account
        </a>
        <a class="item">
          <strong>$<span id="creditOnHand"></span> </strong> &nbsp on hand in game
        </a>
        <div class="right menu">
          <a class="ui item" href="/users/logout">
            Logout
          </a>
        </div>
      </div>
      <% } %>

    <%- body %>

  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/main.js"></script>
  </body>
</html>
